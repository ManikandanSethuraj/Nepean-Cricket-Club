<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.manikandansethuraj.nepeancricketclub.MorePage">
    <LinearLayout android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.33">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageButton android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/btnSchedule"
                android:src="@drawable/schedule"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="25dp"
                android:scaleType="fitXY"
                android:background="@drawable/more_page_corners"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCHEDULE"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorGalleryBGM"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <ImageButton android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/btnPlayers"
                android:src="@drawable/player"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="25dp"
                android:scaleType="fitXY"
                android:background="@drawable/more_page_corners"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLAYERS"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorGalleryBGM"

                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.33">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageButton android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/btnGallery"
                android:src="@drawable/gallery"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="25dp"
                android:scaleType="fitXY"
                android:background="@drawable/more_page_corners"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GALLERY"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorGalleryBGM"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <ImageButton android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/btnLikeUs"
                android:src="@drawable/fb_icon"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="25dp"
                android:scaleType="fitXY"
                android:background="@drawable/more_page_corners"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Like Us !!"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorGalleryBGM"

                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:layout_weight="0.33">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageButton android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/btnCaptains"
                android:src="@drawable/executive"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="25dp"
                android:scaleType="fitXY"
                android:background="@drawable/more_page_corners"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXECUTIVES"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorGalleryBGM"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <ImageButton android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/btnSponsors"
                android:src="@drawable/sponsor"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="25dp"
                android:scaleType="fitXY"
                android:background="@drawable/more_page_corners"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SPONSORS"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorGalleryBGM"

                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
